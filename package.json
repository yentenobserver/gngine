{
  "name": "hexmap3d",
  "version": "0.2.8",
  "description": "3D HexMap using WebGL",
  "main": "dist/hexmap3d.umd.js",
  "types": "dist/hexmap3d.d.ts",
  "module": "dist/hexmap3d.esm.min.js",
  "keywords": [
    "hex",
    "3d",
    "webgl",
    "hexmap",
    "hexagonal"
  ],
  "exports": {
    ".": {
      "require": "./dist/hexmap3d.umd.min.js",
      "import": "./dist/hexmap3d.esm.min.js"
    }
  },
  "scripts": {
    "docs": "typedoc && touch docs/.nojekyll",
    "build:types": "tsc -t esnext --moduleResolution node -d --emitDeclarationOnly --outFile dist/hexmap3d.d.ts src/hexmap3d.ts",
    "build:js": "rollup -c rollup.config.js",
    "build:minjs:umd": "terser dist/hexmap3d.umd.js --compress --mangle > dist/hexmap3d.umd.min.js",
    "build:minjs:esm": "terser dist/hexmap3d.esm.js --compress --mangle > dist/hexmap3d.esm.min.js",
    "build:minjs": "npm run build:minjs:esm -s && npm run build:minjs:umd -s",
    "build": "date && npm run build:js -s && npm run build:minjs -s && npm run build:types -s",
    "test": "env TS_NODE_PROJECT=\"tsconfig-test.json\" mocha -r ts-node/register **/test/**/*.test.ts",
    "coverage": "nyc --reporter html --reporter text npm test",
    "gltftiles": "tools/COLLADA2GLTF-v2.1.5-osx/COLLADA2GLTF-bin -i models/models-prod.dae src/samples/map1/assets/models-prod.gltf ",
    "gltfunits": "tools/COLLADA2GLTF-v2.1.5-osx/COLLADA2GLTF-bin -i models/units-prod.dae src/samples/map1/assets/units.gltf && tools/COLLADA2GLTF-v2.1.5-osx/COLLADA2GLTF-bin -i models/units-prod.dae src/samples/hexmap/assets/units.gltf",
    "gltfhextiles": "tools/COLLADA2GLTF-v2.1.5-osx/COLLADA2GLTF-bin -i models/hex-tiles.dae src/samples/hexmap/assets/tiles.gltf",
    "remote-publish-patch": "npm install && npm update && npm run coverage && npm run build && npm version patch && npm publish && git push origin && git push origin --tags",
    "remote-publish-minor": "npm install && npm update && npm run coverage && npm run build && npm version minor && npm publish && git push origin && git push origin --tags"
  },
  "files": [
    "src",
    "dist"
  ],
  "author": "Maciej Grula",
  "license": "MIT",
  "dependencies": {
    "gameyngine": "~0.1.4"
  },
  "peerDependencies": {
    "three": "^0.124.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/chai": "4.2.14",
    "@types/chai-as-promised": "7.1.3",
    "@types/mocha": "8.0.3",
    "@types/node": "20.5.0",
    "@types/sinon": "9.0.8",
    "@types/three": "^0.137.0",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "7.12.1",
    "mocha": "8.2.1",
    "nyc": "14.1.x",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rollup": "^2.79.1",
    "sinon": "^9.2.4",
    "terser": "^5.19.2",
    "three": "^0.137.4",
    "ts-node": "10.8.1",
    "tslib": "^2.6.2",
    "typedoc": "~0.25.1",
    "typescript": "^5.1.6",
    "@rollup/plugin-node-resolve": "^15.2.2"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 62,
    "lines": 68,
    "functions": 66,
    "statements": 68,
    "exclude-after-remap": false,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.notest.ts",
      "**/*.mock.ts",
      "**/*.test.ts"
    ],
    "all": true
  }
}
